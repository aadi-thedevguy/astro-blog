---
import MainLayout from "../../layouts/MainLayout.astro";
import Tags from "../../components/Tags.astro";
import { getEntry } from "astro:content";

const { slug } = Astro.params;

if (slug === undefined) {
  throw new Error("Slug is required");
}

const entry = await getEntry("blog", slug);

if (entry === undefined) {
  return Astro.redirect("/404");
}

const { Content, remarkPluginFrontmatter } = await entry.render();
---

<MainLayout
  title={entry.data.title}
  icon={entry.data.icon}
  ogImage={entry.data.image}
  desc={entry.data.description}
>
  <article class="text-textPrimary">
    <div class="w-full lg:w-10/12 mx-auto">
      <h1 class="text-4xl font-bold mb-3">{entry.data.title}</h1>
      <div class="flex items-center gap-2 text-lg mb-3 h-6 overflow-y-hidden">
        <span>
          {remarkPluginFrontmatter.minutesRead} |
        </span>
        <div
          id="views-container"
          class="w-2 h-7 text-textSecondary flex flex-col items-center"
          >
          <span>0</span>
          <span id="views"></span>
        </div>
        <span class="text-textSecondary">Views</span>
        <svg
          class="w-5 h-5 text-textSecondary"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          class="w-6 h-6"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M2.036 12.322a1.012 1.012 0 0 1 0-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178Z"
          ></path>
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M15 12a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z"></path>
        </svg>

      </div>
      <Tags tags={entry.data.tags} />
    </div>
    <img
      src={"/images/" + entry.data.image}
      alt="Article"
      class="w-full lg:w-10/12 object-cover aspect-video h-auto rounded-xl my-6 mx-auto"
    />
    <section
      class="w-full lg:w-10/12 mx-auto prose md:prose-xl lg:prose-2xl prose-code:text-textSecondary prose-p:text-textPrimary prose-a:no-underline prose-a:text-textPrimary/80 prose-a:font-medium prose-em:text-textPrimary/80 prose-strong:text-textPrimary/80 prose-li:list-none prose-li:text-textPrimary prose-li:relative prose-li:before:absolute prose-li:before:-left-5 prose-li:before:content-['ðŸ‘‰']"
    >
      <Content />
    </section>
    <a
      href="/articles"
      class="inline-block border border-secondary rounded-3xl px-4 py-2 mt-8 hover:text-textSecondary"
      >Back To Articles</a
    >
  </article>

  <script is:inline>
    const views = document.querySelector("#views");
    const container = document.querySelector("#views-container");

    window.addEventListener("load", async () => {
      await fetchViewCount()
    })

    async function fetchViewCount() {
      const data = {
        url : window.location.href,
        slug : window.location.pathname.split('/')[2]
      }
      try {
        const response = await fetch("/api/views", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify(data),
        });

        if (response.ok) {
          const data = await response.json();
          views.textContent = data.count;
          container.classList.add("fadeUp");
        }

      } catch (error) {
        console.error("Error:", error);
      }
    }
  </script>
</MainLayout>

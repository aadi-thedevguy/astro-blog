---
export const prerender = false;
import MainLayout from "../../layouts/MainLayout.astro";
import Tags from "../../components/Tags.astro";
import { getEntry } from "astro:content";
import { db } from "../../firebase";
import {
  collection,
  getDocs,
  getDoc,
  setDoc,
  doc,
  query,
  where,
} from "firebase/firestore";

const { slug } = Astro.params;
const url = Astro.request.url;

async function createView() {
  try {
    const response = await fetch("https://api.ipify.org?format=json");
    const data = await response.json();
    const user_ip: string = data.ip || "";
    const docId = `${user_ip}-${slug}`; // Combine user IP and article URL to form a unique ID

    const docRef = doc(db, "views", docId);
    const docSnap = await getDoc(docRef);

    if (docSnap.exists()) {
      console.log("This user has been viewed this post");
    } else {
      if (typeof user_ip === "string") {
        await setDoc(docRef, {
          user_ip,
          article: url,
        });
      }
    }
  } catch (error) {
    console.error(error);
  }
}

if (slug === undefined) {
  throw new Error("Slug is required");
}

const entry = await getEntry("blog", slug);

if (entry === undefined) {
  return Astro.redirect("/404");
}

await createView();
const q = query(collection(db, "views"), where("article", "==", url));
const snapshot = await getDocs(q);
const count = snapshot.size;
const { Content, remarkPluginFrontmatter } = await entry.render();
---

<MainLayout
  title={entry.data.title}
  icon={entry.data.icon}
  ogImage={entry.data.image}
  desc={entry.data.description}
>
  <article class="text-textPrimary">
    <div class="w-full lg:w-10/12 mx-auto">
      <h1 class="text-4xl font-bold mb-3">{entry.data.title}</h1>
      <div class="flex items-center gap-2 text-lg mb-3 h-6 overflow-y-hidden">
        <span>
          {remarkPluginFrontmatter.minutesRead} |
        </span>
        <div
          title="Views"
          class="h-7 text-textSecondary flex flex-col items-center fadeUp"
        >
          <span class="block h-5 w-2"></span>
          <span>{count}</span>
        </div>
        <svg
          class="w-5 h-5 text-textSecondary"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          class="w-6 h-6"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M2.036 12.322a1.012 1.012 0 0 1 0-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178Z"
          ></path>
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M15 12a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z"></path>
        </svg>
      </div>
      <Tags tags={entry.data.tags} />
    </div>
    <img
      src={"/images/" + entry.data.image}
      alt="Article"
      class="w-full lg:w-10/12 object-cover aspect-video h-auto rounded-xl my-6 mx-auto"
    />
    <section
      class="w-full lg:w-10/12 mx-auto prose md:prose-xl lg:prose-2xl prose-code:text-textSecondary prose-p:text-textPrimary prose-a:no-underline prose-a:text-textPrimary/80 prose-a:font-medium prose-em:text-textPrimary/80 prose-strong:text-textPrimary/80 prose-li:list-none prose-li:text-textPrimary prose-li:relative prose-li:before:absolute prose-li:before:-left-5 prose-li:before:content-['ðŸ‘‰']"
    >
      <Content />
    </section>
    <a
      href="/articles"
      class="inline-block border border-secondary rounded-3xl px-4 py-2 mt-8 hover:text-textSecondary"
      >Back To Articles</a
    >
  </article>
</MainLayout>

---
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION, SITE_URL } from "../constants";
import "../styles/global.css";
// import { ViewTransitions } from "astro:transitions";

const {
  title = "Archives of The Dev Guy",
  icon = "icon.png",
  ogImage = "undraw.png",
  desc = SITE_DESCRIPTION,
} = Astro.props;
const theme = Astro.cookies.get("theme")?.value ?? "light";
const url = new URL(Astro.url);
const previewImg = SITE_URL + "/images/" + ogImage;
interface Props {
  title?: string;
  desc?: string;
  icon?: string;
  ogImage?: string;
}
---

<!doctype html>
<html lang="en" data-theme={theme}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="shortcut icon" href={"/images/" + icon} type="image/x-icon" />
    <title>{SITE_TITLE} - {title}</title>
    <meta name="description" content={desc} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={desc} />
    <meta property="og:url" content={url.href} />
    <meta property="og:image" content={previewImg} />
    <meta property="og:type" content="website" />

    <!-- Twitter Meta Tags -->
    <meta name="twitter:card" content={previewImg} />
    <meta property="twitter:domain" content="blog.thedevguy.in" />
    <meta property="twitter:url" content={url.href} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={desc} />
    <meta name="twitter:image" content={previewImg} />

    <!-- <ViewTransitions /> -->
  </head>
  <body class="overflow-x-hidden font-Inter text-primary bg-primary">
    <Navbar />
    <section class="container mx-auto max-w-screen-xl mt-10 px-8">
      <slot />
    </section>

    <Footer />
  </body>
</html>
